{
  "name": "simple-notion-orm",
  "version": "0.0.16",
  "description": "Simple TypeScript ORM helpers for Notion's Data Sources API.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "notion",
    "orm",
    "notion-api",
    "notion-database"
  ],
  "author": "Abhin Sharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abhinsharma/simple-notion-orm.git"
  },
  "bugs": {
    "url": "https://github.com/abhinsharma/simple-notion-orm/issues"
  },
  "homepage": "https://github.com/abhinsharma/simple-notion-orm#readme",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "tsc": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --resolve-full-paths && pnpm run clean:dist",
    "clean:dist": "rimraf dist/src dist/tests dist/playground.* dist/vitest.config.*",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "msw": "^2.11.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "tsc-alias": "1.8.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@notionhq/client": "^5.3.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
